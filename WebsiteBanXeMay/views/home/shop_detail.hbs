<section id="center" class="center_shopdt">
    <div class="center_om bg_back">
        <div class="container-xl">
            <div class="row center_o1">
                <div class="col-md-12">
                    <h1 class="text-white font_60">Shop Detail</h1>
                    <h6 class="col_red mb-0">
                        <a class="text-light" href="/">Home</a>
                        <span class="mx-2 text-white-50">/</span>
                        <a class="text-light" href="/shop">Shop</a>
                        <span class="mx-2 text-white-50">/</span>
                        Detail
                    </h6>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="blog" class="pt-5 pb-5">
    <div class="container-xl">
        <div class="row blog_1">
            <div class="col-md-9">
                <div class="shop_dt px-3 border-end">

                    <div class="shop_dt1 row">
                        <div class="col-md-6">
                            <div class="shop_dt1_left">
                                <a href="#">
                                    <img src="{{#if product.image}}{{product.image}}{{else}}/image/39.jpg{{/if}}" alt="abc" class="img-fluid">
                                </a>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="shop_dt1_right">
                                <h1 class="mb-1">{{product.title}}</h1>
                                <b class="d-block fs-4 mb-2">{{product.price}}</b>

                                <span>
                                    <span class="col_red me-3">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star-half-alt"></i>
                                    </span>
                                    (1 CUSTOMER REVIEW)
                                </span>

                                <p class="mt-3">
                                    {{#if product.description}}
                                        {{product.description}}
                                    {{else}}
                                        (Chưa có mô tả)
                                    {{/if}}
                                </p>

                                <input type="number" min="1" value="1" class="form-control float-start me-3 rounded-0"
                                       placeholder="Qty" style="width:80px; height:52px;">
                                <h6 class="mb-0 mt-3"><a class="button px-4" href="#">ADD TO CART </a></h6>

                                <h6 class="mt-4">
                                    <a href="#"><i class="fa fa-heart me-1 align-middle col_red"></i> Add To Wishlist</a>
                                    <a class="ms-3" href="#"><i class="fa fa-recycle me-1 align-middle col_red"></i> Compare</a>
                                </h6>

                                <h5 class="mt-4 mb-3">QUICK INFO</h5>
                                <ul class="mb-0">
                                    <li class="d-flex">
                                        <span class="col_red me-2">ID:</span>
                                        <span class="text-muted">{{product._id}}</span>
                                    </li>

                                    <!-- ✅ BRAND hiển thị theo Danh mục -->
                                    <li class="d-flex mt-2">
                                        <span class="col_red me-2">BRAND:</span>
                                        <span class="text-muted">
                                            {{#if product.categoryName}}
                                                {{product.categoryName}}
                                            {{else}}
                                                (Chưa chọn)
                                            {{/if}}
                                        </span>
                                    </li>

                                    <li class="d-flex mt-2">
                                        <span class="col_red me-2">YEAR / CONDITION:</span>
                                        <span class="text-muted">{{product.year}} / {{product.condition}}</span>
                                    </li>
                                </ul>

                                <ul class="mb-0 mt-3">
                                    <li class="d-inline-block"><a href="#"><i class="fa-brands fa-facebook"></i></a></li>
                                    <li class="d-inline-block ms-1"><a href="#"><i class="fa-brands fa-twitter"></i></a></li>
                                    <li class="d-inline-block ms-1"><a href="#"><i class="fa-brands fa-linkedin"></i></a></li>
                                    <li class="d-inline-block ms-1"><a href="#"><i class="fa-brands fa-whatsapp"></i></a></li>
                                    <li class="d-inline-block ms-1"><a href="#"><i class="fa-brands  fa-pinterest"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="shop_1dt3 mt-5">
                        <h3 class="border_thick ps-3"> Related Products</h3>

                        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 shop mt-4">
                            {{#if related.length}}
                                {{#each related}}
                                    <div class="col">
                                        <div class="shop_left">
                                            <div class="shop_left1 position-relative">
                                                <div class="shop_left1_inner">
                                                    <a href="/shop_detail/{{_id}}">
                                                        <img src="{{#if image}}{{image}}{{else}}/image/32.jpg{{/if}}" alt="abc" class="img-fluid">
                                                    </a>
                                                </div>

                                                <div class="shop_left1_inner2 position-absolute w-100 h-100 bg_back top-0 text-center">
                                                    <h5>
                                                        <a class="button px-3" href="/shop_detail/{{_id}}">
                                                            Read More <i class="fa fa-long-arrow-right ms-2"></i>
                                                        </a>
                                                    </h5>
                                                </div>
                                            </div>

                                            <div class="shop_left2 mt-3">
                                                <!-- ✅ dùng categoryName thay brand -->
                                                <h6 class="fs-6 col_red">{{categoryName}} - {{year}}</h6>
                                                <ul class="mb-0 fs-5">
                                                    <li>
                                                        <a class="justify-content-between d-flex" href="/shop_detail/{{_id}}">
                                                            {{title}}
                                                            <span>{{price}}</span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>

                                        </div>
                                    </div>
                                {{/each}}
                            {{else}}
                                <div class="col">
                                    <div class="alert alert-warning w-100">Không có sản phẩm liên quan.</div>
                                </div>
                            {{/if}}
                        </div>
                    </div>

                </div>
            </div>

            <div class="col-md-3">
                <div class="blog_1_right">
                    <div class="blog_1_right1">
                        <form method="get" action="/shop">
                            <div class="input-group">
                                <input type="text" class="form-control" name="keyword" placeholder="Search Keyword">
                                <span class="input-group-btn">
                                    <button class="btn btn-primary bg_red border-0 rounded-0 p-3 px-4" type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>