<main class="col-md-9 ms-sm-auto common col-lg-10 px-md-4">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-9">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white">
                        <h4 class="mb-0">Thêm xe máy</h4>

                    </div>

                    <div class="card-body">
                        <form action="#" method="post">

                            <!-- Thông tin xe -->
                            <div class="mb-4">
                                <h6 class="mb-3 pb-2 border-bottom">1) Thông tin xe</h6>
                                <div class="row g-3">
                                    <div class="col-12">
                                        <label for="title" class="form-label">Tiêu đề tin <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="title" name="title" maxlength="100" placeholder="VD: Bán SH Mode 125 2021 chính chủ" required>
                                    </div>

                                    <div class="col-md-4">
                                        <label for="brand" class="form-label">Hãng xe <span class="text-danger">*</span></label>
                                        <select class="form-select" id="brand" name="brand" required>
                                            <option value="" selected disabled>Chọn hãng</option>
                                            <option>Honda</option>
                                            <option>Yamaha</option>
                                            <option>Suzuki</option>
                                            <option>Piaggio</option>
                                            <option>SYM</option>
                                            <option>Kawasaki</option>
                                            <option>Ducati</option>
                                            <option>BMW</option>
                                            <option>Triumph</option>
                                            <option>Khác</option>
                                        </select>
                                    </div>

                                    <div class="col-md-4">
                                        <label for="model" class="form-label">Dòng xe / Model <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="model" name="model" placeholder="VD: SH Mode 125, Exciter 155..." required>
                                    </div>

                                    <div class="col-md-4">
                                        <label for="year" class="form-label">Năm sản xuất <span class="text-danger">*</span></label>
                                        <input type="number" class="form-control" id="year" name="year" min="1990" step="1" placeholder="VD: 2021" required>
                                    </div>

                                    <div class="col-md-4">
                                        <label for="mileage" class="form-label">Số km đã đi</label>
                                        <div class="input-group">
                                            <input type="number" class="form-control" id="mileage" name="mileage" min="0" step="10" placeholder="VD: 15000">
                                            <span class="input-group-text">km</span>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <label for="displacement" class="form-label">Dung tích xi-lanh</label>
                                        <div class="input-group">
                                            <input type="number" class="form-control" id="displacement" name="displacement" min="50" step="5" placeholder="VD: 125">
                                            <span class="input-group-text">cc</span>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <label for="type" class="form-label">Loại xe</label>
                                        <select class="form-select" id="type" name="type">
                                            <option value="" selected>Chọn loại</option>
                                            <option>Xe ga (scooter)</option>
                                            <option>Xe số</option>
                                            <option>Xe côn tay / Sport</option>
                                            <option>Adventure</option>
                                            <option>Cruiser</option>
                                            <option>Classic</option>
                                            <option>Xe điện</option>
                                        </select>
                                    </div>

                                    <div class="col-md-4">
                                        <label for="condition" class="form-label">Tình trạng <span class="text-danger">*</span></label>
                                        <select class="form-select" id="condition" name="condition" required>
                                            <option value="" selected disabled>Chọn tình trạng</option>
                                            <option>Mới 100%</option>
                                            <option>Đã qua sử dụng</option>
                                        </select>
                                    </div>

                                    <div class="col-md-4">
                                        <label for="color" class="form-label">Màu sắc</label>
                                        <input type="text" class="form-control" id="color" name="color" placeholder="VD: Đen nhám, Trắng đỏ...">
                                    </div>

                                    <div class="col-12">
                                        <label for="description" class="form-label">Mô tả chi tiết</label>
                                        <textarea class="form-control" id="description" name="description" rows="5" placeholder="Tình trạng xe, lịch sử bảo dưỡng, phụ kiện kèm theo, lý do bán..."></textarea>
                                    </div>
                                </div>
                            </div>

                            <!-- Hình ảnh -->
                            <div class="mb-4">
                                <h6 class="mb-3 pb-2 border-bottom">2) Hình ảnh</h6>
                                <div class="row g-3">
                                    <div class="col-12">
                                        <label for="images" class="form-label">Ảnh xe (tối đa 12 ảnh)</label>
                                        <input class="form-control" type="file" id="images" name="images" accept="image/*" multiple>
                                    </div>
                                </div>
                            </div>

                            <!-- Giá & Liên hệ -->
                            <div class="mb-4">
                                <h6 class="mb-3 pb-2 border-bottom">3) Giá & Liên hệ</h6>
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <label for="price" class="form-label">Giá bán <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <input type="number" class="form-control" id="price" name="price" min="0" step="100000" placeholder="VD: 45000000" required>
                                            <span class="input-group-text">đ</span>
                                        </div>
                                        <div class="form-text">Nhập số, đơn vị VNĐ.</div>
                                    </div>

                                    <div class="col-md-4 align-self-end">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="1" id="negotiable" name="negotiable">
                                            <label class="form-check-label" for="negotiable">Có thương lượng</label>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <label for="city" class="form-label">Tỉnh/Thành phố <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="city" name="city" placeholder="VD: Hà Nội, TP.HCM..." required>
                                    </div>

                                    <div class="col-md-4">
                                        <label for="sellerName" class="form-label">Tên người bán <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="sellerName" name="sellerName" required>
                                    </div>

                                    <div class="col-md-4">
                                        <label for="phone" class="form-label">Số điện thoại <span class="text-danger">*</span></label>
                                        <input type="tel" class="form-control" id="phone" name="phone" inputmode="tel" pattern="^[0-9]{9,11}$" placeholder="VD: 0912345678" required>
                                        <div class="form-text">Chỉ nhập số, 9–11 chữ số.</div>
                                    </div>

                                    <div class="col-md-4">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="email" name="email" placeholder="VD: email@domain.com">
                                    </div>
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="d-flex justify-content-end gap-2 pt-3 border-top">
                                <button type="reset" class="btn btn-outline-secondary">Làm mới</button>
<!--                                <button type="submit" class="btn btn-primary" href="/admin/ecommerce_prod">Thêm Sản Phẩm</button>-->
                                <a href="/admin/ecommerce_prod" class="btn btn-primary">Thêm mới</a>
                            </div>

                        </form>
                    </div>


                </div>
            </div>
        </div>
    </div>
</main>