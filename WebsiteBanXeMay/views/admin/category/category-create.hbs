<main class="col-md-9 ms-sm-auto common col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Thêm Danh Mục Mới</h1>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white">
                    <h6 class="mb-0 font-weight-bold"><i class="fa fa-plus-circle"></i> Thông tin danh mục</h6>
                </div>
                <div class="card-body">
                    <form action="/admin/category/create" method="POST">

                        <div class="mb-3">
                            <label for="name" class="form-label fw-bold">Tên danh mục <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Ví dụ: Honda, Yamaha..." required>
                        </div>

                        <div class="mb-3">
                            <label for="image" class="form-label fw-bold">Link Hình ảnh (URL)</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa fa-image"></i></span>
                                <input type="text" class="form-control" id="image" name="image" placeholder="https://example.com/anh-xe.jpg">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label fw-bold">Mô tả</label>
                            <textarea class="form-control" id="description" name="description" rows="4" placeholder="Nhập mô tả chi tiết về danh mục này..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="status" class="form-label fw-bold">Trạng thái hiển thị</label>
                            <select class="form-select" id="status" name="status">
                                <option value="true" selected>Hiện (Active)</option>
                                <option value="false">Ẩn (Inactive)</option>
                            </select>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a href="/admin/category" class="btn btn-secondary">
                                <i class="fa fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary" >
                                <i class="fa fa-save"></i> Lưu dữ liệu
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>


    </div>
</main>