<main class="col-md-9 ms-sm-auto common col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Cập nhật Danh mục</h1>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white">
                    <h6 class="mb-0 font-weight-bold"><i class="fa fa-pencil-square-o"></i> Thông tin danh mục</h6>
                </div>
                <div class="card-body">
                    <form action="/admin/category/edit/{{category._id}}?_method=PUT" method="POST">

                        <div class="mb-3">
                            <label for="name" class="form-label fw-bold">Tên danh mục <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="name" name="name" value="{{category.name}}" required>
                        </div>

                        <div class="mb-3">
                            <label for="image" class="form-label fw-bold">Link Hình ảnh (URL)</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa fa-image"></i></span>
                                <input type="text" class="form-control" id="image" name="image" value="{{category.image}}" placeholder="https://example.com/anh-xe.jpg">
                            </div>

                            {{#if category.image}}
                                <div class="mt-2">
                                    <p class="small text-muted mb-1">Ảnh hiện tại:</p>
                                    <img src="{{category.image}}" alt="Preview" class="img-thumbnail" style="height: 100px;">
                                </div>
                            {{/if}}
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label fw-bold">Mô tả</label>
                            <textarea class="form-control" id="description" name="description" rows="4">{{category.description}}</textarea>
                        </div>

                        <div class="mb-3">
                            <label for="status" class="form-label fw-bold">Trạng thái hiển thị</label>
                            <select class="form-select" id="status" name="status">
                                <option value="true" {{#if category.status}}selected{{/if}}>Hiện (Active)</option>

                                <option value="false" {{#unless category.status}}selected{{/unless}}>Ẩn (Inactive)</option>
                            </select>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a href="/admin/category" class="btn btn-secondary">
                                <i class="fa fa-arrow-left"></i> Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fa fa-check"></i> Cập nhật
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>


    </div>
</main>