<main class="col-md-9 ms-sm-auto common col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Cập nhật thông tin xe</h1>
    </div>

    {{#if error_message}}
        <div class="alert alert-danger">{{error_message}}</div>
    {{/if}}

    <div class="row">
        <div class="col-md-9">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white">
                    <h6 class="mb-0 fw-bold text-primary"><i class="fa fa-pencil"></i> Chỉnh sửa: {{product.title}}</h6>
                </div>
                <div class="card-body">

                    <form action="/admin/product/edit/{{product._id}}?_method=PUT" method="POST">
                        <div class="row g-3">

                            <div class="col-12">
                                <label class="form-label fw-bold">Tên xe / Model <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="title" value="{{product.title}}" required>
                            </div>

                            <!-- ✅ CATEGORY DYNAMIC -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Danh mục (Category) <span class="text-danger">*</span></label>
                                <select class="form-select" name="category" required>
                                    <option value="">-- Chọn danh mục --</option>
                                    {{#each categories}}
                                        <option value="{{_id}}" {{#if (eq _id ../product.category)}}selected{{/if}}>
                                            {{name}}
                                        </option>
                                    {{/each}}
                                </select>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Hãng sản xuất</label>
                                <select class="form-select" name="brand">
                                    <option value="Honda" {{#if (eq product.brand "Honda")}}selected{{/if}}>Honda</option>
                                    <option value="Yamaha" {{#if (eq product.brand "Yamaha")}}selected{{/if}}>Yamaha</option>
                                    <option value="Suzuki" {{#if (eq product.brand "Suzuki")}}selected{{/if}}>Suzuki</option>
                                    <option value="Piaggio" {{#if (eq product.brand "Piaggio")}}selected{{/if}}>Piaggio</option>
                                    <option value="Kawasaki" {{#if (eq product.brand "Kawasaki")}}selected{{/if}}>Kawasaki</option>
                                    <option value="Khác" {{#if (eq product.brand "Khác")}}selected{{/if}}>Khác</option>
                                </select>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Năm sản xuất</label>
                                <input type="number" class="form-control" name="year" value="{{product.year}}">
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Giá bán (VNĐ) <span class="text-danger">*</span></label>
                                <input type="number" step="any" min="0" class="form-control" name="price" value="{{product.price}}" required>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Tình trạng xe</label>
                                <select class="form-select" name="condition">
                                    <option value="Xe Cũ" {{#if (eq product.condition "Xe Cũ")}}selected{{/if}}>Xe Đã qua sử dụng</option>
                                    <option value="Mới 100%" {{#if (eq product.condition "Mới 100%")}}selected{{/if}}>Xe Mới 100%</option>
                                </select>
                            </div>

                            <div class="col-12">
                                <label class="form-label fw-bold">Link Hình ảnh</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa fa-link"></i></span>
                                    <input type="text" class="form-control" name="image" value="{{product.image}}" placeholder="https://...">
                                </div>

                                {{#if product.image}}
                                    <div class="mt-2 p-2 border rounded bg-light d-inline-block">
                                        <p class="small text-muted mb-1">Ảnh hiện tại:</p>
                                        <img src="{{product.image}}" alt="Preview" style="height: 100px; object-fit: contain;">
                                    </div>
                                {{/if}}
                            </div>

                            <div class="col-12">
                                <label class="form-label fw-bold">Mô tả chi tiết</label>
                                <textarea class="form-control" name="description" rows="5">{{product.description}}</textarea>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label fw-bold">Trạng thái tin</label>
                                <select class="form-select" name="status">
                                    <option value="true" {{#if product.status}}selected{{/if}}>Đang bán (Hiện)</option>
                                    <option value="false" {{#unless product.status}}selected{{/unless}}>Ngưng bán (Ẩn)</option>
                                </select>
                            </div>
                        </div>

                        <div class="mt-4 pt-3 border-top text-end gap-2 d-flex justify-content-end">
                            <a href="/admin/product" class="btn btn-secondary">
                                <i class="fa fa-times"></i> Hủy
                            </a>
                            <button type="submit" class="btn btn-success px-4">
                                <i class="fa fa-check"></i> Cập nhật Xe
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>


    </div>
</main>